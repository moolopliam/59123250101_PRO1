@model IEnumerable<Khruphanth.Models.T_Requisition>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">รายการเบิกคงเหลือ</h4>
                </div>
                <div class="card-body">
                    <table id="myTable" class="table table-striped table-bordered " style="width: 100%">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("เลขที่ใบเบิก")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Re_DateRequi)
                            </th>
                            <th>
                                @Html.DisplayName("สถานะ")
                            </th>
                            <th>
                                @Html.DisplayName("ชื่อผู้เบิก")
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.RequisitionID)
                                    </td>
                                    <td class="font">
                                        @item.Re_DateRequi.Value.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="font">
                                        <span class="badge badge-success"> @Html.DisplayFor(modelItem => item.T_Stap.ST_StepName)</span>
                                    </td>
                                    <td class="font">
                                        @item.Teacher.Title.TName @Html.DisplayFor(modelItem => item.Teacher.TeaName)
                                    </td>
                                    <td class="font center-block" style="text-align: center">
                                        @Html.ActionLink("รายการเบิก", "Details", null, new {RequisitionID = item.RequisitionID}, new {@class = "btn-rounded btn btn-info font"})
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/bootstrap-editable.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>


}